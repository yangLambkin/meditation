/* 团队icon容器样式 */
.team-icons-container {
  width: 100%;
  margin-top: 20rpx;
}

/* 团队icon行样式 */
.team-icons-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
  width: 100%;
}

/* 团队icon项目样式 */
.team-icon-item {
  width: 112rpx;
  height: 112rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

/* 选中状态的团队icon */
.team-icon-item.selected {
  border: 4rpx solid #b29764;
  border-radius: 28rpx;
  background-color: #f3f4f6;
  box-shadow: 0 4rpx 12rpx rgba(178, 151, 100, 0.3);
}