/* 页面容器 */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f0f4f8 100%);
  padding: 40rpx 32rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #101727;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #99a1ae;
  display: block;
}

/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #354152;
  margin-bottom: 24rpx;
  display: block;
}

/* 头像选择区域 */
.avatar-section {
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 0;
  overflow: visible;
  padding: 0;
  margin: 0 0 16rpx 0;
  background: transparent;
  border: none;
  line-height: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 0; /* 先设置为0，让图片自己控制圆角 */
  overflow: visible;
  padding: 0;
  margin: 0 0 16rpx 0;
  background: transparent;
  border: none;
  line-height: 0; /* 避免文本行高影响 */
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: block;
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-btn:hover .avatar-mask,
.avatar-btn:active .avatar-mask {
  opacity: 1;
}

.avatar-text {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

.avatar-hint {
  font-size: 26rpx;
  color: #99a1ae;
  text-align: center;
  display: block;
}

/* 昵称输入区域 */
.nickname-section {
  margin-bottom: 60rpx;
}

form {
  position: relative;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background: white;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #101727;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #b29764;
  box-shadow: 0 0 0 4rpx rgba(178, 151, 100, 0.1);
}

.char-count {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #99a1ae;
}

.nickname-hint {
  font-size: 26rpx;
  color: #99a1ae;
  margin-top: 16rpx;
  display: block;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.skip-btn, .save-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.skip-btn {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
}

.skip-text {
  color: #64748b;
}

.save-btn {
  background: #e2e8f0;
}

.save-btn.active {
  background: #b29764;
}

.save-btn:not(.active) {
  opacity: 0.6;
}

.save-text {
  color: white;
}

.save-btn.active:active {
  transform: scale(0.98);
  background: #9c8356;
}

.skip-btn:active {
  transform: scale(0.98);
  background: #f1f5f9;
}

/* 隐藏的提交按钮 */
.hidden-submit {
  display: none;
}

/* 加载提示 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 48rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #b29764;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #354152;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .profile-container {
    padding: 32rpx 24rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .avatar-btn {
    width: 140rpx;
    height: 140rpx;
  }
}