.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #007aff;
  padding-left: 20rpx;
}

.image-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 400rpx;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.image-url {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
  text-align: center;
}

.cache-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.cache-info text {
  font-size: 24rpx;
  color: #333;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}

.log-container {
  max-height: 400rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.log-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.log-item:last-child {
  border-bottom: none;
}

.log-text {
  font-size: 22rpx;
  color: #495057;
  font-family: monospace;
}