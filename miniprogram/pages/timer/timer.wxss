/* ===== 计时器按钮布局样式 ===== */

/* 计时器按钮容器 */
.timer-button-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0rpx;
  padding: 0 60rpx;
}

/* 停止按钮包装器 - 确保布局对称 */
.stop-btn-wrapper {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 停止按钮占位元素 */
.stop-btn-placeholder {
  width: 100rpx;
  height: 100rpx;
}

/* 基础圆形按钮样式 */
.weui-btn-circle {
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(178, 151, 100, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 主按钮 - 开始和暂停按钮，大尺寸 */
.weui-btn-circle.main-btn,
.weui-btn-circle.pause-btn {
  width: 160rpx;
  height: 160rpx;
}

/* 停止按钮和重置按钮 - 小尺寸 */
.weui-btn-circle.stop-btn,
.weui-btn-circle.reset-btn {
  width: 100rpx;
  height: 100rpx;
}

/* 按钮交互效果 */
.weui-btn-circle:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(178, 151, 100, 0.4);
}

/* 主按钮 - 主题色渐变 */
.weui-btn-circle.primary {
  background: linear-gradient(135deg, #B29764, #D4B982);
  color: #FFFFFF;
}

.weui-btn-circle.primary:active {
  background: linear-gradient(135deg, #9C8357, #C4A874);
}

/* 暂停按钮 - 主题色渐变 */
.weui-btn-circle.secondary-btn {
  background: linear-gradient(135deg, #B29764, #D4B982);
  color: #FFFFFF;
}

.weui-btn-circle.secondary-btn:active {
  background: linear-gradient(135deg, #9C8357, #C4A874);
}




/* 重置按钮 - 中性色 */
.weui-btn-circle.reset-btn {
  background: #F0F0F0;
  color: #666666;
  border: 2rpx solid #E5E5E5;
}

.weui-btn-circle.reset-btn:active {
  background: #E8E8E8;
}

/* 按钮图标样式 */
.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

/* 主按钮大图标 - 开始和暂停按钮 */
.main-btn-icon,
.pause-btn-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

/* 停止按钮图标 */
.stop-btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}

/* 重置按钮小图标 */
.reset-btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 4rpx;
}

/* 按钮文字样式 */
