  font-size: 20rpx;
  font-family: Arimo;
  font-weight: 500;
  line-height: 18rpx;
}

/* 主按钮大文字 - 开始和暂停按钮 */
.main-btn-text,
.pause-btn-text {
  font-size: 28rpx;
  font-family: Arimo;
  font-weight: 600;
  line-height: 26rpx;
}

/* 停止按钮文字 */
.stop-btn-text {
  font-size: 18rpx;
