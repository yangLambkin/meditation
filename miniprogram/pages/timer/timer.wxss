/* ===== 进度圈样式 ===== */

/* 进度圈容器 */
.progress-circle-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx auto;
}

/* 背景圆环 */
.progress-circle-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #f2f4f6;
  box-sizing: border-box;
}

/* 进度填充圆环容器 */
.progress-circle-fill {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

/* 进度圈半圆通用样式 */
.progress-circle-half {
  position: absolute;
  width: 50%;
  height: 100%;
  transform-origin: 100% 50%;
  transition: transform 0.3s ease-in-out;
}

/* 左半圆 */
.progress-circle-left {
  left: 0;
  background: linear-gradient(135deg, #B29764, #D4B982);
  border-radius: 250rpx 0 0 250rpx;
  border: 6rpx solid transparent;
  border-right: none;
  box-sizing: border-box;
}

/* 右半圆 */
.progress-circle-right {
  left: 50%;
  background: linear-gradient(135deg, #F0D8A8, #FFE8B8);
  border-radius: 0 250rpx 250rpx 0;
  border: 6rpx solid transparent;
  border-left: none;
  box-sizing: border-box;
}

