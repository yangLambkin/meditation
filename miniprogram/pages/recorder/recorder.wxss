/* ===== 5星评分组件样式 ===== */

/* 星星容器 */
.star-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  transition: all 0.3s ease;
}

/* 星星图片 */
.star-icon {
  width: 56rpx;
  height: 56rpx;
  transition: all 0.3s ease;
  filter: drop-shadow(0rpx 2rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 悬停状态 */
.star-item.hover .star-icon {
  opacity: 0.9;
  transform: scale(1.2);
}

/* 选中状态 */
.star-item.active .star-icon {
  opacity: 1;
  transform: scale(1.1);
  filter: 
    drop-shadow(0rpx 0rpx 16rpx rgba(255, 215, 0, 0.8))
    drop-shadow(0rpx 0rpx 32rpx rgba(255, 215, 0, 0.4));
}

/* 悬停 + 选中状态 */
.star-item.active.hover .star-icon {
  transform: scale(1.3);
  filter: 
    drop-shadow(0rpx 0rpx 24rpx rgba(255, 229, 92, 0.9))
    drop-shadow(0rpx 0rpx 48rpx rgba(255, 229, 92, 0.6));
}

/* 触摸效果 */
.star-item:active {
  transform: scale(0.95);
}

/* 响应式效果 */
@media (min-width: 768px) {
  .star-item:hover {
    transform: scale(1.05);
  }
  
  .star-item:hover .star-icon {
    opacity: 0.8;
    transform: scale(1.1);
  }
}

